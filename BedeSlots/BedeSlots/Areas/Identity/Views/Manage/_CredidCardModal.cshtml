@model BankDetailsViewModel

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title text-center">Add new credid card</h4>
    </div>
    <div class="modal-body">
        <div class="payment">
            <form id="credit-card-form" asp-controller="Manage" asp-action="AddCreditCard" method="post">
                <div class="form-group CVV" id="card-cvv-field">
                    <label asp-for="Cvv">CVV</label>
                    <input asp-for="Cvv" type="text" class="form-control">
                </div>
                <div class="form-group" id="card-number-field">
                    <label asp-for="Number">Card Number</label>
                    <input asp-for="Number" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="ExpiryDate">Expiry Date</label>
                    <input id="@nameof(@Model.ExpiryDate)" name="@nameof(@Model.ExpiryDate)" type="text" class="form-control datepicker" data-date-format='mm/yyyy' placeholder="mm/yyyy" />
                </div>
                <div class="form-group" id="credit_cards">
                    <img src="~/images/visa.jpg" id="visa">
                    <img src="~/images/mastercard.jpg" id="mastercard">
                    <img src="~/images/amex.jpg" id="amex">
                </div>
                <button type="submit" class="btn btn-default" id="confirm-purchase">Confirm</button>
            </form>
        </div>
    </div>
</div>