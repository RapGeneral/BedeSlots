@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<h2>Manage your account</h2>
<div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li class="side-menu"><a asp-action="Deposit">Deposit</a></li>
                <li class="side-menu"><a asp-action="ChangePassword">Password</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)
    <script>
        $(() => {
            const activeLinkSelector = "a[href='" + location.pathname + "']";
            $(activeLinkSelector).parents('li.side-menu').addClass('active');
        });
    </script>
}
