@using BedeSlots.ViewComponents;

@if (User.Identity.IsAuthenticated)
{
    <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-controller="Manage" asp-action="Deposit" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li>
                <a asp-area="Identity" asp-controller="Manage" asp-action="Deposit" title="Manage">@await Component.InvokeAsync(nameof(Money))</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}